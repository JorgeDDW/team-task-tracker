<%= form_with(model: task, local: true ) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name, class:"input", placeholder: 'Title' %>
  </div>

  <div class="field">
    <%= form.text_area :content, class:"textarea", placeholder: "Add Description" %>
  </div>


  <div class="field">
    <%= form.text_field :tag , class: "tags",placeholder:"add tags, coma separated" %>
  </div>

  <div class="field">
    
    <%= form.date_field :due_date, class: "far fa-calendar" %> 
  </div>


  <div class="actions">
    <%= form.submit(class: "button is-primary") %>
  </div>
<% end %>
