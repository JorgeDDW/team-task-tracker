<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Assigned</th>
      <th>Content</th>
      <th>Due date</th>
      <th>Tag</th>
      <th>Status</th>
      <th>Creator</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.assigned %></td>
        <td><%= task.content %></td>
        <td><%= task.due_date %></td>
        <td><%= task.tag %></td>
        <td><%= task.status %></td>
        <td><%= task.creator %></td>
        <td><%= task.time %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

